<h1>Single Plugin</h1>
<section class="single-card">
  <div class="card">
    <img src={{plugin.picUrl}} alt="placeholder">
    <h2>{{plugin.name}}</h2>
    <h3>${{plugin.price}}</h3>
    <div class="card-description">
      <p>{{plugin.description}}</p>
    </div>
    <div class="card-btn"> V </div>
  </div>
</section>

<section>
  <form class="" action="/plugins/{{plugin._id}}/purchase" method="POST">
    <script class="stripe-button" src="https://checkout.stripe.com/checkout.js"
    data-key={{PUBLIC_STRIPE_API_KEY}}
    data-amount={{plugin.price}}
    data-name='Plugin Purchaser'
    data-description={{plugin.name}}
    data-image='https://stripe.com/img/documentation/checkout/marketplace.png'
    data-locale='auto'
    data-zip-code='true'
    charset="utf-8"></script>
  </form>
</section>

<section class="edit-form">
  <form class="" id="edit-plugin" action="/plugins/{{plugin._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" value="" placeholder={{plugin.name}}>
    </div>
    <div class="form-group">
      <label for="picUrl">Thumbnail URL</label>
      <input type="text" name="picUrl" value="" placeholder={{plugin.picUrl}}>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" name="description" value="" placeholder={{plugin.description}}>
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      <input type="text" name="price" value="" placeholder={{plugin.price}}>
    </div>
    <button type="submit" name="button">Update</button>
  </form>
  <form class="" id="delete-plugin" action="/plugins/{{plugin._id}}?_method=DELETE" method="POST">
    <button type="submit" name="button">Delete</button>
  </form>
</section>
